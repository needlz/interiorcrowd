.col-xs-6
  .itemBox
    .row
      .col-lg-6.col-sm-7.itemBoxLeft{ style: 'height: 264px;' }
        = render 'shared/image_with_enlarge_button',
            settings: EnlargeablePicture.new(image_class: 'full-size-image-container',
              use_div: true,
              thumb_path: image_item.thumb_url,
              original_size_path: image_item.original_size_url,
              url_for_downloading: image_item.download_url,
              no_mobile_overlay: true)
      .col-lg-6.col-sm-5.itemBoxRight{ style: 'height: 264px;' }
        %h4.name= image_item.name
        %p.brand= image_item.brand
        %p.dimensions= image_item.dimensions
        %p.price= image_item.price
        - if image_item.link_href.present?
          = link_to 'SHOP NOW', image_item.link_href,
            target: '_blank',
            class: "#{ tracked_link } link",
            data: { name: 'Final design - product item link' }
        .clearfix
