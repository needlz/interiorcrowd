.bottom60.marg-top30
  .container.animated.fadeInDown
    .row
      .col-md-8.disablePadding
        = render partial: 'clients/client_center/entries/phases', locals: {active_tab: 1}
      = render partial: 'clients/client_center/entries/responses_filter', locals: { selected_answer: params[:answer] }
  %p.chooseP= t('client_center.entries.choose_concept')

  .row
    .col-md-12.feedbackInvite
      %h3= t('client_center.entries.need_idea')
      %p= t('client_center.entries.you_invited', name: @contest.client.first_name)
      %p
        = t('designer_center.contests_preview.contest_name')
        %span= @contest_view.name
      %p
        = t('designer_center.contests_preview.room')
        %span= @contest.design_space.name

= render partial: 'clients/client_center/entries/feedback/feedback_items'
= render partial: 'clients/client_center/entries/feedback/paginate'

- if @client
  = render partial: 'clients/client_center/entries/notes'
  = render partial: 'clients/client_center/entries/user_invitations'
