= render partial: 'shared/setup_image_items_collapsible_text'

.container.animated.fadeInDown.bottom60
  .row
    .col-md-8.disablePadding{ style: 'margin-bottom: 20px;' }
      = render partial: 'clients/client_center/entries/phases',
          locals: { stripe: @entries_page.entries_concept_board_page.phases_stripe }
    %br/
    %br/
  .col-md-8.disablePadding.relative.contest-request{ data: { id: request.id } }
    = render partial: 'shared/moodboard',
        locals: { items: @entries_page.entries_concept_board_page.current_lookbook_items }
    .image-items
      = render @entries_page.entries_concept_board_page.paginated_image_items_partial('product_items')
      = render @entries_page.entries_concept_board_page.paginated_image_items_partial('similar_styles')

  .col-md-4
    = render partial: 'contest_requests/submission_info',
        locals: { designer: request.designer, submitted_at: request.created_at, request: request  }
    = render partial: 'shared/comments',
        locals: { request: request, comments: request.comments, show_comment_switcher: true, readonly: true }
