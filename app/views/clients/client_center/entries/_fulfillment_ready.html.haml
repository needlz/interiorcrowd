.container.animated.fadeInDown.bottom60
  .row
    .col-md-8.disablePadding
      = render partial: 'clients/client_center/entries/phases',
          locals: { stripe: PhasesStripe.new(last_step: 1) }
      %p.thisIsAPreview= t('client_center.entries.collaboration.this_is_a_preview')
    .col-md-4
      %p.timeLeft There are 3 days left
    %br/
    %br/
  .col-md-8.disablePadding.relative
    = render partial: 'shared/moodboard', locals: { request: request }
    .image-items
      = render partial: 'clients/client_center/entries/collaboration/image_block',
          locals: { choosable: true,
          title: t('designer_center.edit.products_list'),
          block_text: t('client_center.entries.collaboration.check_message'),
          image_items: request.product_items.includes(:image) }
      = render partial: 'clients/client_center/entries/collaboration/image_block',
          locals: { choosable: true,
          title: t('designer_center.edit.similar_styles'),
          block_text: t('client_center.entries.collaboration.check_message'),
          image_items: request.similar_styles.includes(:image) }

  .col-md-4
    = render partial: 'contest_requests/submission_info', locals: { designer: request.designer, submitted_at: request.created_at, request: request  }
    = render partial: 'designer_center_requests/edit/comments', locals: { request: request, comments: request.comments }
  = render partial: 'clients/client_center/entries/collaboration/footer_buttons', locals: { request: request }
