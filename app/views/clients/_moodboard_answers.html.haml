.answers{ data: { url: answer_contest_request_path(id: request_id) } }
  = render partial: 'clients/answer',
      locals: { answer: answer,
                text: t('client_center.entries.answers.no') }
  = render partial: 'clients/answer',
      locals: { answer: answer,
                text: t('client_center.entries.answers.maybe') }
  = render partial: 'clients/answer',
      locals: { answer: answer,
                text: t('client_center.entries.answers.favorite') }
  = render partial: 'clients/answer',
      locals: { answer: answer,
                text: t('client_center.entries.answers.winner') }
