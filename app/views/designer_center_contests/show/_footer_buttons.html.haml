- if contest_response = contest.response_of(designer)
  .col-md-6.disablePadding.text-right
    %a.submitMyDesign{ href: edit_designer_center_response_path(id: contest_response) }
      = t('designer_center.responses.item.update_moodboard')
      = image_tag 'gt.png'
- else
  .col-md-6.disablePadding.text-right
    %a.submitMyDesign{:href => new_designer_center_response_path(contest_id: contest.id)}
      = t('contests.titles.join')
      = image_tag 'gt.png'
