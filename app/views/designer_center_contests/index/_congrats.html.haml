.row
  .col-md-12= t('designer_center.contests_preview.invite')
  .row.joinContestHeader
    .col-md-2= t('designer_center.contests_preview.contest_id')
    .col-md-2= t('designer_center.contests_preview.contest_name')
    .col-md-2= t('designer_center.contests_preview.type')
    .col-md-2= t('designer_center.contests_preview.room')
    .col-md-2= t('designer_center.contests_preview.price')
    .col-md-2= t('designer_center.contests_preview.days_left_to_enter')
  .row.joinContestBody
    - @current_contests.each do |contest|
      .col-md-2= contest.id
      .col-md-2= contest.name
      .col-md-2= contest.design_category
      .col-md-2= contest.design_space
      .col-md-2= contest.price
      .col-md-2
        = contest.days_count
        %span days