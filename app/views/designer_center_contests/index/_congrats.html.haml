.row
  .col-md-12= t('designer_center.contests_preview.invite_congrat')
  .row.joinContestHeader
    .col-xs-2= t('designer_center.contests_preview.contest_id')
    .col-xs-2= t('designer_center.contests_preview.contest_name')
    - if @show_package_type
      .col-xs-2= t('designer_center.contests_preview.type')
    .col-xs-2= t('designer_center.contests_preview.room')
    .col-xs-2= t('designer_center.contests_preview.price')
    - if @invited_contests
      .col-xs-2= t('designer_center.contests_preview.days_left_to_enter')
    .col-xs-2= t('designer_center.contests_preview.submissions')
  .row.joinContestBody
    = render 'designer_center_contests/index/contests_list', columns: @invited_contests
