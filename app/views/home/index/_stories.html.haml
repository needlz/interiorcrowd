%h2= t('home.client_stories.title')
.shortUnderline.marginBottom40
.container-fluid.client-stories
  .client-bg-slider-wrapper
    .client-bg-slider
      - todays_client_stories.each do |story|
        .client-bg-slide{ style: "background: url('/assets/client_stories/designed-for-#{ story[:name].downcase }.jpeg') no-repeat center; background-size: cover;" }
  .container
    .row
      .col-xs-12.col-xs-offset-0.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-8
        .client-stories-slider
          - todays_client_stories.each do |story|
            %div
              .client-stories-slider-outer
                .client-stories-slider-inner
                  %img{ src: "/assets/client_stories/#{ story[:name].downcase }-personal.png" }
                  %h4= story[:name].possessive + t('home.client_stories.story_title_constant_part')
                  .slider-delimiter
                  %p= story[:wording]
                  .slider-delimiter
                  %a{ href: "http://www.interiorcrowd.com/blog/#{ story[:blog_post].downcase }", target: '_blank' }
                    = t('home.client_stories.read_more_about', pronoun: story[:pronoun] )
