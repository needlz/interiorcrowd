#topCarouselHome.carousel.slide.carousel-fade{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    %li{"data-slide-to" => "0", "data-target" => "#topCarouselHome"}
    %li.active{"data-slide-to" => "1", "data-target" => "#topCarouselHome"}
    %li{"data-slide-to" => "2", "data-target" => "#topCarouselHome"}
    %li{"data-slide-to" => "3", "data-target" => "#topCarouselHome"}
  / Wrapper for slides
  .carousel-inner{:role => "listbox"}
    .item
      %img{:src => "/assets/entertain.jpg"}/
      .carousel-caption
        %span Let's design
        your place to entertain.
        %a.getStartedBtn{ href: design_brief_contests_path, class: tracked_link }= t('home.get_started').upcase
    .item.active
      %img{:src => "/assets/come_home.jpg"}/
      .carousel-caption
        %span Let's design
        your place to come home.
        %a.getStartedBtn{ href: design_brief_contests_path, class: tracked_link }= t('home.get_started').upcase
    .item
      %img{:src => "/assets/be_together.jpg"}/
      .carousel-caption
        %span Let's design
        your place to be together.
        %a.getStartedBtn{ href: design_brief_contests_path, class: tracked_link }= t('home.get_started').upcase
    .item
      %img{:src => "/assets/start_the_day.jpg"}/
      .carousel-caption
        %span Let's design
        your place to start the day.
        %a.getStartedBtn{ href: design_brief_contests_path, class: tracked_link }= t('home.get_started').upcase
  / Controls
  %a.left.carousel-control{"data-slide" => "prev", :href => "#topCarouselHome", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#topCarouselHome", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
%a.getStartedTop{ href: design_brief_contests_path, class: tracked_link }
  = t('home.get_started').upcase
