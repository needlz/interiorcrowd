.menu-border.whiteBg.border0
  .container.paddY20
    .text-center.logo-mobile
      %img{:height => "200", :src => "/assets/logo.png", :width => "200"}/
.container-fluid.text-center.homeEmailSignup
  .row
    .col-md-12
      %h3= t('sign_up_beta.private_beta')
      %p= t('sign_up_beta.enter_email')
      .container
        .row
          .col-md-12
            .hLine10
.optionalSignup
  - if flash[:error].present?
    .alert.alert-danger= flash[:error]
  - if flash[:notice].present?
    .alert.alert-success= flash[:notice]
  .labelHomeLeft
    %label.lineHight37= t('sign_up_beta.email')
    %label.lineHight37= t('sign_up_beta.name')
    %label.lineHight37= t('sign_up_beta.role_switcher')
  .labelHomeRight
    = form_for BetaSubscriber.new do |f|
      = f.text_field :email
      = f.text_field :name
      = f.radio_button :role, :designer, class: 'smallRadio'
      = f.label :role_designer do
        %span
        = t('sign_up_beta.designer')
      = f.radio_button :role, :consumer, class: 'smallRadio'
      = f.label :role_consumer do
        %span
        = t('sign_up_beta.client')
      = button_tag t('sign_up_beta.go'), type: 'submit', class: 'btn fullWidth marg-top20'
