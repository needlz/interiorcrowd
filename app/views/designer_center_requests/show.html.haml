- content_for :head do
  = javascript_include_tag 'designer_center_requests/concept_board_uploader'
  = javascript_include_tag 'designer_center_requests/show'
  = javascript_include_tag 'designers/lookbook'
  = render partial: 'shared/setup_uploadify'
  :javascript
    I18n = #{ translations_to_json('client_center') }
    MessagesI18n = #{ translations_to_json(['board_comments']) }

    $(document).ready(function() {
      сonceptBoardUploaderI18n = #{ translations_to_json(['contests', 'space', 'uploading_image']) }
      ConceptBoardUploader.init({ i18n: сonceptBoardUploaderI18n, contestRequestId: #{ @request.id.to_json } })
    })

- content_for :designer_center_content do
  .row.marginTop40
    .col-lg-8
      = render partial: 'clients/client_center/entries/phases',
               locals: { stripe: @show_page.phases_stripe,
                         css_class: 'marginBottom40' }
    .col-lg-4.marginBottom40
      - if @contest_request_milestone.designer_hint
        %p.daysLeft= @contest_request_milestone.designer_hint

  .row.marg-top30.response{ data: { id: @request.id } }
    .col-md-8.disablePadding
      .initialImage
        - if @show_page.finished?
          %p.font18= @request.final_note
          %p.font18= @request.pull_together_note
        - if @request.lost?
          .col-md-12.loser-text.big= t('designer_center.responses.loser.title')
          .col-md-12.loser-text.small= t('designer_center.responses.loser.add_to_portfolio')
        - if @request.editable?
          = render partial: 'designer_center_requests/show/image_loading',
              locals: { items: @show_page.current_lookbook_items,
                button_title: t('designer_center.responses.item.edit_concept_board') }
        - else
          = render partial: 'shared/moodboard',
              locals: { items:  @show_page.current_lookbook_items }

    .col-md-4.attribute{ data: {attribute: 'feedback', url: designer_center_response_path(@request.id) } }

      = render partial: 'designer_center_requests/show/notes', locals: { request: @request }
      - if @request.sound
        .designer-voice
          = render partial: 'contest_requests/listen', locals: { request: @request }
        .hLine
      - if @request.commenting_enabled?
        = render partial: 'designer_center_requests/edit/comments', locals: { request: @request,
            comments: @request.comments, show_comment_switcher: !@request_view.initial_concept_board? }
    = render @show_page.image_items_partial if @show_page.image_items_partial
    = render partial: 'designer_center_requests/footer_buttons'

= render partial: 'designer_center/layout'
