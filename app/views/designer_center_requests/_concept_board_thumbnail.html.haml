.some-text.col-md-6.no-padding-left
.clearfix
- path = request.moodboard_image_path || placeholder_src
.thumbs
  .col-md-12.novice.no-padding-left.template.relative
    = render partial: 'contests/options/example_picture_thumb', locals: { src: '' }
  - if path
    .col-md-12.novice.no-padding-left.thumb.relative
      = render partial: 'contests/options/example_picture_thumb', locals: { src: path }
.clearfix
.col-md-6.no-x-padding.marg-top20
  %input#concept_picture.hidden{ name: 'image[image]', type: 'file' }
  %input#concept_board_picture_id{ name: image_id_input_name,
    type: "hidden",
    value: request.concept_board_image.try(:id) }
