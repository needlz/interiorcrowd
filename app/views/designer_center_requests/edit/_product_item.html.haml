.row.marg-top20.product-item{ data: { id: product_item.id } }
  .edit-form.hidden
    .row.marg-top20
      .col-md-4
        %div.relative
          = button_tag 'Change image', class: 'btn btn-change-image', type: 'button'
          = image_tag product_item.medium_size_image_url, class: 'productListIMG'
          = file_field_tag 'image[image]', class: 'hidden'
          = hidden_field_tag "contest_request[product_items][image_ids][]", product_item.image_id
        %div
          = link_to t('designer_center.final_upload.save'), '#', class: 'font16 makeMeBlack makeMeBold save-button'
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          = link_to t('designer_center.final_upload.cancel'), '#', class: 'font16 makeMeBlack makeMeBold cancel-button'
      .col-md-8
        .row.productEditList
          = hidden_field_tag 'contest_request[product_items][ids][]', product_item.id
          - [:name, :brand, :dimensions, :price, :link].each do |attribute|
            .clearfix
              .col-md-3
                = label_tag attribute, t("designer_center.final_upload.#{ attribute.to_s }")
              .col-md-9
                = text_field_tag "contest_request[product_items][#{ attribute }s][]",
                    product_item.send(attribute),
                    class: attribute.to_s

  .view
    .col-md-4
      = image_tag product_item.medium_size_image_url, class: 'productListIMG'
      = link_to t('designer_center.final_upload.edit') , '#', class: 'editProductItemBtn edit-button'
      = hidden_field_tag "contest_request[product_items][image_ids][]", product_item.image_id
    .col-md-8
      - [:name, :brand, :dimensions, :price].each do |attribute|
        %p.font16.makeMeBlack.lineHeight25.margin0{ class: attribute.to_s }= product_item.send(attribute)
      = link_to product_item.link.to_s, product_item.link.to_s, class: 'font20 blueLink link'