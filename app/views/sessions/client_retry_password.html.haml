= content_for :head do
  = stylesheet_link_tag  'compiled/reset'
/ reset
#reset_pwd.reset_page{:style => "padding-top:100px;"}
  .container
    .row
      .col-md-12.box_wrapper
        = form_tag client_retry_password_sessions_path, {:id => :login} do
          .col-md-12
            = render :partial => 'home/msg'
            .box
              .head
                %h4 Enter your email address below.
                .line
              .form
                %form
                  %input#email.control-form{:name => "email", :placeholder => "Email address", :type => "text"}/
                  %span#err_f.text-error
                  %input{:type => "submit", :value => "Reset password"}/
:javascript
  jQuery(document).ready(function() {
  	
  	jQuery("#login").submit(function(){
  	    jQuery("#err_f").text('');
  		var email = jQuery("#email").val().trim();
  		var bool = true
  		if (email.length > 0) {
  			var rege = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
  			if(!rege.test(email))	{
  				jQuery("#err_f").text('Please enter valid email.');
  				bool = false
  			}
  		} else {
  			jQuery("#err_f").text('Please enter email.');	
  			bool = false
  		}
  			
  		if(!bool) {
  			return false
  		}	
  	});
  	
  });
/ reset
