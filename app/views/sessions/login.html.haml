= content_for :head do
  = stylesheet_link_tag  'compiled/sign-in'
  = javascript_include_tag 'sessions/login'

.container.animated.fadeInDown.bottom60
  .row
    .col-md-6.col-md-offset-3.loginBox
      %h2= t('login.designer.title')
      .row
        .col-md-8.col-md-offset-2
          = render :partial => 'home/msg'
          = form_tag authenticate_sessions_path, {:id => :login} do
            %span#err_u.text-error
            %input#username{:placeholder => t('login.email'), :type => "text"}/
            %span#err_p.text-error
            %input#password{:placeholder => t('login.password'), :type => "password"}/
            .row
              .col-md-6
                %input#remember-me{:type => "checkbox"}/
                %label.normal-font{ for: 'remember-me' }= t('login.remember_me')
              .col-md-6.text-right
                %a.forgotPass{:href => retry_password_sessions_path}= t('login.forgot_password')
            %input.btn.loginBtn{:type => "submit", :value => t('login.log_in')}/
            %p
              = t('login.designer.dont_have_account')
              %a{ href: new_designer_path }= t('login.designer.sign_up')
