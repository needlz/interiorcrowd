<script type="text/javascript">
	jQuery(function(){
		
		jQuery(".home_wrapper").click(function(e) {
			jQuery(".home_wrapper").removeClass("alert-info");
			jQuery(this).addClass("alert-info");	
			jQuery("#plan_id").val(jQuery(this).attr("plan_id"));
		})
		
		var plan_id = jQuery("#plan_id").val();
		
		if(plan_id.length > 0) {
			jQuery("#"+plan_id).addClass("alert-info");
		}
		
		jQuery('.continue').click(function(e) {
			e.preventDefault();
			
			jQuery(".text-error").html("");
			
			var pname = jQuery.trim(jQuery("#project_name").val());
			var pbudget = jQuery.trim(jQuery("#plan_id").val());
			
			var bool = true
			var focus = false
			
			if(pname.length < 1) {
				bool = false
				jQuery("#err_prj_name").html("Please enter project_name.");
				focus = "project_name"	
			}
			
			if(pbudget.length < 1) {
				bool = false
				jQuery("#err_plan").html("Please choose plan.");
				if(!focus) {
					focus = "err_plan"
				}
			}  
			
			if(bool) {
				jQuery("#step6").submit();
			} else {
				jQuery("#"+focus).focus();
				return false;
			}
		});
	});
   
</script>