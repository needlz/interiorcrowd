.row
  .col-sm-10.col-sm-offset-1.page-title
    %h3= t('contests.titles.areas')
.row
  .col-sm-4
    %label.checkbox
      = areas_parent_dropdown(design_area)
.row
  .col-sm-4
    %label.checkbox
      - @creation_wizard.available_design_areas.top_level.each do |area|
        - if area.children.present?
          = select_tag('design_area', options_for_select(area.children.map { |child| [child.name, child.id] } ), class: 'area-children', 'data-id' => area.id, style: 'display: none')