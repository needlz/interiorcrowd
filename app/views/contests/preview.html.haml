- content_for :head do
  = javascript_include_tag 'contests/preview'
  = javascript_include_tag 'lib/select2-3.5.2/select2.js'
  = javascript_include_tag 'shared/color_selector'

  = stylesheet_link_tag 'lib/select2-3.5.2/select2.css'
  = stylesheet_link_tag 'lib/select2-3.5.2/select2-bootstrap'

#in_pricing
  .container
    .section_header
    = form_tag save_preview_contests_path,  {:id => "account_creation", :method => "post"} do
      %input#plan_id{:name => "preview[b_plan]",
      :type => "hidden",
      :value => @contest_view.budget_plan}
      .row.charts_wrapp
        .col-sm-12
          .plan
            .wrapper
              .row
                .page-header
                  %h2= t('contests.titles.creation')
              .row
                .page-header
                  %h3= t('contests.titles.preview')
              .container.col-sm-offset-1.preview
                .row
                  = render partial: 'contests/categories_preview'
                .row
                  = render partial: 'contests/areas_preview'
                .row
                  = render partial: 'contests/designer_level_preview'
                .row
                  = render partial: 'contests/appeals_preview'
                .row
                  = render partial: 'contests/desirable_colors_preview'
                .row
                  = render partial: 'contests/undesirable_colors_preview'
                .row
                  = render partial: 'contests/examples_preview'
                .row
                  = render partial: 'contests/links_preview'
                .row
                  = render partial: 'contests/space_pictures_preview'
                .row
                  = render partial: 'contests/dimensions_preview'
                .row
                  = render partial: 'contests/budget_preview'
                .row
                  = render partial: 'contests/comment_preview'
                .row
                  .col-sm-9
                    .row.projectname.plan
                      .form-inline
                        .col-sm-4
                          %label{:style => ""} Give your project a name
                        .col-sm-6
                          %input#project_name.form-control{maxlength: "100",
                            name: "preview[contest_name]",
                            type: "text",
                            value: @contest_view.name}
                          %span#err_prj_name.text-error
              = render partial: 'contests/plan_options'
              .row.formbuttons
                .col-sm-3.col-sm-offset-2
                  %a.order{:href => design_space_contests_path} GO BACK
                .col-sm-3.col-sm-offset-4
                  %a.order.continue{:href => "#"} CONTINUE
