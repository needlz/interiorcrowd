- content_for :head do
  = javascript_include_tag 'contests/design_brief'
  = javascript_include_tag 'contests/area_options'
  :javascript
    window.I18n = #{ translations_to_json(['contests', 'creation']) }

= render partial: 'shared/have_unfinished_project'

- content_for :page_content do
  #choose-room
    = render partial: 'home/msg'
    = form_tag save_design_brief_contests_path,
        { id: 'design_categories', method: 'post' } do
      = render partial: 'contests/options/category_options'
      = render partial: 'contests/options/area_options'
      = hidden_mixpanel_submit_tag
    .text-center
      %button.btn1.btn1-confirm.lightFont{ type: 'button' }= t('contests.creation.continue')

= render partial: 'contest_creation_page'
