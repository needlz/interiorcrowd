- content_for :page_content do
  .row
    .col-sm-10.col-sm-offset-1.page-title
      %h3= t('contests.titles.design_categories')
  = render :partial => 'home/msg'
  = form_tag step2_contests_path, {:id => "step1", :method => "post"} do
    = render partial: 'contests/category_checkbox_row',
    collection: @creation_wizard.available_design_categories,
    as: :design_category
    %span#err_category.text-error
  .row.formbuttons
    .col-sm-4.col-sm-offset-6
      = link_to "CONTINUE", '#', :class => "order"
= render partial: 'contest_creation_page'

= javascript_include_tag 'contests/step1'