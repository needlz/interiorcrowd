%div.credit-card-params.col-xs-11{ class: card.css_class }
  .card-details.col-lg-8.col-sm-8.col-xs-12
    - card.params.each do |parameter, value|
      .row
        %p.card-param.col-xs-4= parameter
        %p.card-param-value.col-xs-6= value
  .card-actions.col-lg-4.col-sm-4
    - if defined?(read_only) && read_only
      %span.set-primary{ "data-id" => card.id }= card.link_caption if card.primary?
    - else
      %a#edit-card{ "data-id" => card.id }= t('client_center.sign_up.edit_credit_card')
      %a#remove-card{ "data-id" => card.id }= t('client_center.sign_up.remove_credit_card')
      %a.set-primary{ "data-id" => card.id }= card.link_caption
