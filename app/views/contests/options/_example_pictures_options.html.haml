.design-style-options
  .example-pictures
    .col-md-12.border
    .col-md-12.no-x-padding.title
      %h1= t('contests.titles.example')
    #image_display.col-md-12
      .col-md-3.novice.template
        = render partial: 'contests/options/example_picture_thumb', locals: { src: '' }
      - @contest_view.examples.try(:each) do |path|
        .col-md-3.novice.thumb
          = render partial: 'contests/options/example_picture_thumb', locals: { src: path }
    .col-md-6.no-x-padding.file-input-container
      %button.btn3.btn3-confirm.upload-button{:style => "margin-bottom: 38px;", :type => "button"} Upload images

      %input#file_input{ name: "image[image]", type: 'file', style: 'display: none', multiple: 'multiple' }
    %input#design_style_image_id{name: "design_style[document_id]",
      type: "hidden",
      value: @contest_view.example_ids.try(:join, ',') }
