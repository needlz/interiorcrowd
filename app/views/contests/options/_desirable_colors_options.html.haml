.design-style-options
  .fav-colors
    .row
      .col-md-12
        %h3.marginTop40.marginBottom40= t('contests.titles.wanted_colors')
    .row
      .col-md-12
        %span#err_fav.text-error
        - selected_colors_input = capture do
          %input#fav_color.form-control{name: "design_style[desirable_colors]",
            type: "text",
            value: @contest_view.desirable_colors,
            class: 'color-typeahead'}

    .row
      = render partial: 'contests/options/colors_picker', locals: { selected_colors_input: selected_colors_input }

    .row
      .col-md-12.designers-requirements
        %label
          = hidden_field_tag 'design_style[designers_explore_other_colors]', '0'
          = check_box_tag 'design_style[designers_explore_other_colors]',
              '1',
              @contest_view.designers_explore_other_colors,
              class: 'hidden'
          .tick-btn
            %span ✓
          .text= t('contests.design_style.want_designers.explore_other_colors')
        %br
        %label
          = hidden_field_tag 'design_style[designers_only_use_these_colors]', '0'
          = check_box_tag 'design_style[designers_only_use_these_colors]',
              '1',
              @contest_view.designers_only_use_these_colors,
              class: 'hidden'
          .tick-btn
            %span ✓
          .text= t('contests.design_style.want_designers.only_use_these_colors')
    .clearfix
