.row.step-row
  %label Upload pictures of your space
.row.space-pictures
  .col-sm-offset-1.col-sm-8.form-inline{:style => "padding-left:0"}
    %span#image_display{:style => "padding-bottom:10px;"}
      - @contest_view.space_pictures.try(:each) do |path|
        %img{:src => path}
    %input#file_input{ name: 'image[image]', type: 'file', multiple: 'multiple' }
    %input#design_space_image_id{:name => "design_space[document_id]", :type => "hidden", :value => @contest_view.space_pictures_ids.try(:join, ',') }
    %span (.jpg, .tif, .png)

.some-text.col-md-6.no-padding-left
  %h1{:style => "font-size:20px;color:#231f20;"}= t('contests.space.photos.title')
  %span{:style => "font-size:16px;"}= t('contests.space.photos.hint')
  %br/
  %span{:style => "font-size:14px;line-height: 35px;"}
    %i= t('contests.space.photos.image_requirements')
.some-text.col-md-6
  %h1{:style => "font-size:18px;text-decoration: underline;font-weight:normal;text-align: right;"}
    %a.a-under{:href => "#"}
      %i= t('contests.space.photos.see_more')
.clearfix

.col-md-12{:style => " border: 1px dashed black; padding-top: 40px; padding-bottom: 35px; margin-top: 30px;"}
  = render partial: 'contests/options/removable_thumbnails', locals: { urls: @contest_view.space_pictures }

.clearfix
.col-md-6.no-x-padding{:style => "margin-top:40px;"}
  %button.btn3.btn3-confirm{:style => "margin-bottom: 38px;", :type => "button"}= t('contests.space.photos.upload_button')
.clearfix
.col-md-4.no-padding-left{:style => "line-height: 25px;"}
  %span
    %i= t('contests.space.photos.prefer_to_email_or_text')
  %br/
  %span
    %i= t('contests.space.photos.text_to')
  %br/
  %span
    %i= t('contests.space.photos.email_to')
.clearfix
