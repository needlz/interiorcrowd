.space-options
  .feedback
    %h3.marginTop60.title= t('contests.space.other_feedback.title')
    %p.designStyle.text-right
      %a{ href: 'javascript:void(0)',
              data: { container: '.feedback',
                toggle: 'popover',
                placement: 'bottom',
                html: 'true',
                content: render('contests/options/feedback_default_text_popup'),
                viewport: '.feedback' } }
        ?
    %textarea{ type: 'text', name: 'design_space[feedback]', class: 'feedbackInstructions' }
      = @contest_view.feedback
