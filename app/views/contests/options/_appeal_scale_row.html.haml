.appeal
  %img.fullWidth.appeal-collage-image{ src: scale.collage_picture }/
  %a.appeal-picture-enlarge.pull-right.visible-xs{ href: scale.collage_picture }
    = t('contests.design_style.enlarge_picture')
  .row.loveLikeLeave
    - options_cycle_name = 'options order'
    - @creation_wizard.available_appeal_feedback.each do |appeal_feedback|
      .col-sm-4.option
        = radio_button_tag("design_style[appeals][#{ scale.identifier }][value]",
            appeal_feedback[:value],
            scale.value == appeal_feedback[:value],
            class: 'hidden')
        = label_tag("design_style_appeals_#{ scale.identifier }_value_#{ appeal_feedback[:value] }",
            AppealScale.localized_appeal_value(appeal_feedback[:name]),
            class: cycle(%w[first second third],
            name: options_cycle_name))
    - reset_cycle(options_cycle_name)

  %p.tellUs
    Tell us why
    %span.optional (optional)
  = text_field_tag "design_style[appeals][#{ scale.identifier }][reason]", scale.reason, class: 'tellUsInput'
  .fullWidthLine.marginTop40
