- value_html = capture do
  - @contest_view.appeal_scales.each do |style|
    - if style.preferred_appeal_name
      %span.selection.style-name= style.preferred_appeal_name
      .live-tiles
        .tile.width3.height2
        .tile.width2.height150
        .tile.width2.height4
        .tile.width3.height150
        .tile.width2.height250
        .tile.width3
        .tile.width15.height150
        .tile.width15.height150
        .tile.width15.height250
        .tile.width15.height250
        .tile.width3.height150
        .tile.width4
      .comment
        %textarea= style.reason
    .clearfix
    %p
= render partial: 'contests/previews/preview_row', locals: { title: t('contests.titles.brief.design_style'), value: value_html }
