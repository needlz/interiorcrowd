- content_for :head do
  = javascript_include_tag 'shared/pictures_upload_button'
  = javascript_include_tag 'shared/uploader'
  = javascript_include_tag 'portfolio/edit'

  :javascript
    I18n = #{ translations_to_json('designer_center.portfolio.creation'.split('.')) }

- content_for :designer_center_content do
  .portfolio-creation.lightFont{ data: { designer: { id: @portfolio.designer.id } } }
    = form_for @portfolio, url: portfolio_path, method: :patch  do |f|
      = render partial: 'portfolios/form', locals: { form: f }
      %div.lineBreak
      .text-center
        = f.submit update_button_text(@portfolio), class: 'btn1 btn1-confirm'

= render partial: 'designer_center/layout'
