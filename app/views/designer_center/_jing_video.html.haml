  - padding = 30
  .modal-dialog{ style: "width: #{ width / 2 + padding }px; height: #{ height / 2 + padding }px;" }
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        %object#scPlayer{:data => "#{ video_base_path }jingswfplayer.swf",
                height: height / 2,
                type: "application/x-shockwave-flash",
                width: width / 2 }
          %param{:name => "movie",
                :value => "#{ video_base_path }jingswfplayer.swf"}/
          %param{:name => "quality", :value => "high"}/
          %param{:name => "bgcolor", :value => "#FFFFFF"}/
