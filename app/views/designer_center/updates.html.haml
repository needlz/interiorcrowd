- content_for :head do
  = javascript_include_tag 'designer_center_requests/updates'

- content_for :designer_center_content do
  .container.animated.fadeInDown.bottom60
    .row
      .col-md-12.no-x-padding.updates-notifications
        %a.btn.invitesBtn{type: 'invite', reverse: true}= t('designer_center.updates.invites')
        %a.btn.commentsBtn{type: 'comment'}= t('designer_center.updates.comments')
        %a.btn.winsBtn{type: 'win'}= t('designer_center.updates.wins')
        %a.btn.notificationsBtn{type: 'notification'}= t('designer_center.updates.notifications')

    .row.marg-top20
      .col-md-8.no-x-padding
        - @notifications_view.each do |notification|
          = render partial:'designer_notification', locals: { notification: notification }
      .col-md-4
        .sidebarComments.leaderboardSidebar
          %p.designerName= t('designer_center.updates.leaderboard')
          #scrollBoxComments{tabindex: "0"}
            = render partial:'comment_container', locals: {comment: {username: 'InteriorCrowd Team', time:'17 min ago', text: 'Curabitur commodo dui ipsum, sed sollicitudin nisi aliquam suscipit.'}}
            = render partial:'comment_container', locals: {comment: {username: 'InteriorCrowd Team', time:'39 min ago', text: 'Curabitur commodo dui ipsum, sed sollicitudin nisi aliquam suscipit.'}}
            = render partial:'comment_container', locals: {comment: {username: 'InteriorCrowd Team', time:'2hr ago', text: 'Curabitur commodo dui ipsum, sed sollicitudin nisi aliquam suscipit.'}}
            = render partial:'comment_container', locals: {comment: {username: 'InteriorCrowd Team', time:'1d ago', text: 'Curabitur commodo dui ipsum, sed sollicitudin nisi aliquam suscipit.'}}
            = render partial:'comment_container', locals: {comment: {username: 'InteriorCrowd Team', time:'2d ago', text: 'Curabitur commodo dui ipsum, sed sollicitudin nisi aliquam suscipit.'}}

= render partial: 'designer_center/layout'

:javascript
    $('#scrollBoxComments').enscroll({
    verticalTrackClass: 'scrollBoxCommentsTrack',
    verticalHandleClass: 'scrollBoxCommentsHandle',
    minScrollbarLength: 28
    });
