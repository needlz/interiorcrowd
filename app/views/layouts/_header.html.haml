%nav#menu.mm-menu.mm-horizontal.mm-offcanvas
  %ul#mm-0.mm-list.mm-panel.mm-opened.mm-current
    %li
      %a{href: "#"}= t('header.get_inspired')
    %li
      %a{href: "#"}= t('header.portfolio')
    %li
      %a{href: "#"}= t('header.how_it_works')
    - if session[:designer_id].present?
      %li
        %a{href: designer_center_index_path}= t('header.designer_center')
      %li
        %a{href: logout_sessions_path}= t('header.sign_out')
    - elsif session[:client_id].present?
      %li
        %a{href: client_center_index_path}= t('header.client_center')
      %li
        %a{href: logout_sessions_path}= t('header.sign_out')
    - else
      %li.dropdown
        %a.mm-subopen{href: '#mm-1'}
        %a{href: '#about'}= t('header.login')
  %ul#mm-1.mm-list.mm-panel.mm-hidden
    %li.mm-subtitle
      %a.mm-subclose{href: '#mm-0'}= t('header.login')
    %li
      %a{href: client_login_sessions_path}= t('header.client_login')
    %li
      %a{href: login_sessions_path}= t('header.designer_login')

.mm-page.mm-slideout
  .visible-xs.visible-sm
    .mobile-menu
      %a{href: '#menu'}
  .menu-border
    .container
      .text-center.logo-mobile.visible-sm.visible-xs
        %a{ href: root_path }
          %img{src: '/assets/logo2.png'}/
      .row.my-menu.visible-lg.visible-md
        .col-md-2.no-padding-right.logo-pc
          %a{ href: root_path }
            %img{ src: '/assets/logo2.png' }
        %a.btn.btn2-success.pull-right{href: need_help_path }
          %b= t('header.need_help')
        .col-md-10.no-padding-right
          .top-nav.pull-down
            .nav-collapse
              %ul.nav.nav-tabs.text-menu.main-menu.pull-right
                %li
                  %a{href: "#"}= t('header.get_inspired')
                %li
                  %a{href: "#"}= t('header.portfolio')
                %li
                  %a{href: "#"}= t('header.how_it_works')
                - if session[:designer_id].present?
                  %li
                    %a{href: designer_center_index_path}= t('header.designer_center')
                  %li
                    %a{href: logout_sessions_path}= t('header.sign_out')
                - elsif session[:client_id].present?
                  %li
                    %a{href: client_center_index_path}= t('header.client_center')
                  %li
                    %a{href: logout_sessions_path}= t('header.sign_out')
                - else
                  %li.dropdown
                    %a.dropdown-toggle{ data: { toggle: 'dropdown' } , href: 'sign-in.html' }
                      = t('header.login')
                      %b.caret
                    %ul.dropdown-menu
                      %li
                        %a{href: client_login_sessions_path}= t('header.client_login')
                      %li
                        %a{href: login_sessions_path}= t('header.designer_login')
