%html{ lang: 'en' }
  %head
    = render partial: 'layouts/head'

    :javascript
      $(function() {
        if ($.fn.mmenu){
          $('nav#menu').mmenu(); // generates menu for mobile screen
        }
      });
  %body.pull_top
    .mm-page.mm-slideout
      #body-container
        #body-header
          = render partial: 'layouts/header'
        #body-content
          = yield
        #body-footer
          = render partial: 'layouts/footer'
    = render 'shared/setup_viglink'
