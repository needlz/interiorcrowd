= form_for(@designer) do |f|
  %input#designer_image{name: 'portfolio[picture_ids]', type: 'hidden', value: @designer_images}
  %h3= t('designer_center.sign_up.get_started')

  .row
    .col-md-5
      %label.signUpInputLabel= t('designer_center.sign_up.first_name')
      %span#err_first_name.text-error
      = f.text_field :first_name, class: 'form-control'
      %label.signUpInputLabel= t('designer_center.sign_up.last_name')
      %span#err_last_name.text-error
      = f.text_field :last_name, class: 'form-control'
      %label.signUpInputLabel= t('designer_center.sign_up.street_address')
      = f.text_field :address, class: 'form-control'
      %label.signUpInputLabel= t('designer_center.sign_up.city')
      = f.text_field :city, class: 'form-control'
      .row
        .col-md-5
          %label.signUpInputLabel= t('designer_center.sign_up.state')
          = select('designer',
              'state',
              options_for_select(PersonalData.state_options, 0),
              {},
              { class: 'selectpicker form-selector' })
        .col-md-7
          %label.signUpInputLabel= t('designer_center.sign_up.zipcode')
          %span#err_zip.text-error
          = f.text_field :zip, class: 'form-control'
    .col-md-5.col-md-offset-1
      %label.signUpInputLabel= t('designer_center.sign_up.email')
      %span#err_email.text-error
      = f.text_field :email, class: 'form-control'
      %label.signUpInputLabel= t('designer_center.sign_up.password')
      %span#err_password.text-error
      = f.password_field :password, class: 'form-control'
      %label.signUpInputLabel= t('designer_center.sign_up.confirm_password')
      %span#err_cpassword.text-error
      = f.password_field :password_confirmation, class: 'form-control'
      %label.signUpInputLabel= t('designer_center.sign_up.phone_number')
      = f.text_field :phone_number, class: 'form-control'
  .lineBreak
  = render partial: 'designers/new/portfolio'
  .row
    .col-md-12.text-center
      .tick-btn.terms-tick
        %span âœ“
      %label.font20{:for => "agreeTermsInteriorCrowd"}= t('designer_center.sign_up.i_agree')
      %label.font20.designer-contract.link= t('designer_center.sign_up.designer_contract')
      = check_box_tag 'designer_agree', 'yes', false, name: '', class: 'hidden'

  .paddBottom40
  .text-center
    %input.btn1.btn1-confirm.create-account{:name => "commit", :type => "submit", :value => t('designer_center.sign_up.register_button')}/
