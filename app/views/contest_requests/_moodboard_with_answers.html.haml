      locals: { image: contest_request.concept_board_image_by_phase(:initial) }
  - if show_answer_options
    .bottom20
    = render partial: 'clients/moodboard_answers',
        locals: { request_id: contest_request.id, answer: contest_request.answer, button_class: 'btn' }
    .bottom20
